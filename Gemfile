source 'https://rubygems.org'

ruby '2.0.0'

# EventMachine for HTTP and DNS
gem "eventmachine"
gem "thin"
gem "skinny"

# Rails!
gem 'rails', '4.0.0.rc2'

# Database and models
gem 'pg'
gem 'public_suffix'
gem 'addressable', require: 'addressable/uri'
gem 'certificate_authority'

# Assets
gem 'sass-rails', '~> 4.0.0.rc2'
gem 'bootstrap-sass'
gem 'closure-compiler'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'

# Views
gem 'jbuilder'
gem 'slim-rails'
gem 'simple_form', '~> 3.0.0.beta1'

# Engines
gem 'devise', '~> 3.0.0.rc'

# Documentation
group :doc do
  gem 'sdoc', require: false
end

# Development tools
group :development, :test do
  gem 'rspec-rails'
  gem 'ir_b'
end

# Testing
group :test do
  gem 'capybara'
  gem 'turnip'
end
